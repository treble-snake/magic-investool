{
  "name": "@investool/standalone",
  "version": "1.0.0-alpha.7",
  "description": "Magic Investool as a standalone app",
  "main": "server-dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "yarn compile && DEBUG=true electron -r dotenv/config .",
    "test": "jest --maxWorkers=1",
    "compile": "rm -rf server-dist/ && tsc",
    "app:pack": "rm -rf dist/ && electron-builder --dir",
    "app:dist": "rm -rf dist/ && electron-builder",
    "build:server": "rm -rf src/routes/api && rm -rf src/libs/cross-platform && cp -r ../web-ui/pages/api src/routes/api && cp -r ../web-ui/libs/cross-platform src/libs/cross-platform && yarn compile",
    "build:ui": "cd ../web-ui && yarn && yarn build && yarn export && rm -rf ../electron/static && cp -r ./out ../electron/static",
    "build:all": "yarn build:server && yarn build:ui && yarn app:dist"
  },
  "author": "Cap <treble.snake@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@investool/engine": "file:../engine",
    "cors": "^2.8.5",
    "electron-serve": "^1.1.0",
    "express": "^4.17.2",
    "moment": "^2.29.1",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/ramda": "^0.27.64",
    "dotenv": "^14.3.2",
    "electron": "^15.3.1",
    "electron-builder": "^22.14.5",
    "jest": "^27.4.7",
    "next": "^12.0.9",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "build": {
    "appId": "org.treblesnake.investool",
    "productName": "Magic Investool",
    "files": [
      "server-dist/**/*",
      "static/**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
